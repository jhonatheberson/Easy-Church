    "eslint": "^7.8.0",
    "eslint-plugin-adonis": "^1.0.15",
    "husky": "^4.3.0",
    "pino-pretty": "^4.2.0",
    "typescript": "^4.0.2",
    "youch": "^2.0.10",
    "youch-terminal": "^1.0.0"
  },
  "dependencies": {
    "@adonisjs/ace": "^6.0.0",
    "@adonisjs/auth": "^4.3.1",
    "@adonisjs/core": "^5.0.0-preview-rc",
    "@adonisjs/fold": "^6.0.0",
    "@adonisjs/lucid": "^8.4.2",
    "@adonisjs/session": "^3.1.2",
    "luxon": "^1.25.0",
    "pg": "^8.3.3",
    "phc-argon2": "^1.0.10",
    "phc-bcrypt": "^1.0.3",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
